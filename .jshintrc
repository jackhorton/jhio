{
    // environment
    "node": true,
    "browser": false,

    // enforcing
    "camelcase": true,
    "immed": true,
    "newcap": true,
    "plusplus": false,
    "quotmark": "single",
    "unused": "vars",
    "maxparams": 4,
    "varstmt": true,

    // relaxing
    "esnext": true,
    "globalstrict": true,
    "validthis": true
}
