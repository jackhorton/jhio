<layout-use template="../common/layout.marko" page-id="${data.pageId}" header="${data.header}">
    <layout-put into="head">
        <link href="/css/index/page.css" rel="stylesheet">
        <title>${data.pageTitle}</title>
    </layout-put>
    <layout-put into="content">
        <for each="activity in data.timeline">
            <include template="${activity.template}" model="${activity}"/>
        </for>
    </layout-put>
    <layout-put into="scripts">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/3.3.1/masonry.pkgd.min.js"></script>
        <script src="/js/index/page.js"></script>
    </layout-put>
</layout-use>
